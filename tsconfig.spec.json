{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest"
    ],
    "target": "es5",
  },
  "allowJs": true,
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "exclude": [
    "**/node_modules",
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/test.ts",
  ]
}